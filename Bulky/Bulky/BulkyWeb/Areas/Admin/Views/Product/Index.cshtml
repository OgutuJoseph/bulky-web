@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-opacity-50 bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">All Products</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    Create New Product
                    <i class="bi bi-plus-circle"></i>
                </a>
            </div>
        </div>
